<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n </pattern>
        </encoder>
    </appender>
    <logger name="org/example/lesson5/LoggerEx002" level="trace" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="trace">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>